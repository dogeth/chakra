<% @chakra_name = @chakra.name.downcase %>
<h2><%= h @chakra.name.capitalize %></h2>
<p><%= h @chakra.description %></p>
<p><%= h @chakra.question %></p>
<div id="canvas">
<% for g in @chakra.goddesses %>
	<% link_to({:controller => 'goddesses', :action => 'show', :goddess => g.name}, :class => 'move numeric hide') do %>
		<%= h g.number %>
	<% end %>
	<br />
<% end %>
</div>